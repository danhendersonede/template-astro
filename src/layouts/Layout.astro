---
import { siteConfig } from '@/config/site';
import SkipLink from '@/components/SkipLink.astro';

export interface Props {
  title?: string;
  description?: string;
  frontmatter?: {
    pageTitle?: string;
    title?: string;
    description?: string;
    [key: string]: any;
  };
}

const { title, description, frontmatter } = Astro.props;

// Support both direct props and frontmatter object
const pageTitle =
  frontmatter?.pageTitle || frontmatter?.title || title
    ? `${frontmatter?.title || title} | ${siteConfig.name}`
    : siteConfig.title;
const pageDescription =
  frontmatter?.description || description || siteConfig.description;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="manifest" href="/manifest.json" />
    <meta name="generator" content={Astro.generator} />
    <meta name="view-transition" content="same-origin" />
    <meta name="description" content={pageDescription} />
    <meta name="theme-color" content="#000000" />
    <title>{pageTitle}</title>
    <slot name="head" />
  </head>
  <body>
    <SkipLink />
    <main id="main-content" role="main">
      <slot />
    </main>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
    font-family: system-ui, sans-serif;
    line-height: 1.6;
    color: #333;
  }

  main {
    margin: auto;
    padding: 2rem;
    width: 800px;
    max-width: calc(100% - 2rem);
    min-height: calc(100vh - 4rem);
  }

  /* Focus management */
  *:focus-visible {
    outline: 2px solid #4f46e5;
    outline-offset: 2px;
  }

  /* Reduced motion support */
  @media (prefers-reduced-motion: reduce) {
    *,
    *::before,
    *::after {
      animation-duration: 0.01ms !important;
      animation-iteration-count: 1 !important;
      transition-duration: 0.01ms !important;
    }
  }
</style>
