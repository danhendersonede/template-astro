---
// Skip link for keyboard navigation accessibility
export interface Props {
  href?: string;
  text?: string;
}

const { href = '#main-content', text = 'Skip to main content' } = Astro.props;
---

<a href={href} class="skip-link">
  {text}
</a>

<style>
  .skip-link {
    position: absolute;
    top: -40px;
    left: 6px;
    z-index: 1000;
    padding: 8px;
    background: #000;
    color: #fff;
    text-decoration: none;
    border-radius: 4px;
    font-size: 14px;
    font-weight: bold;
    transition: top 0.3s;
  }

  .skip-link:focus {
    top: 6px;
  }

  .skip-link:hover,
  .skip-link:focus {
    background: #333;
    outline: 2px solid #fff;
    outline-offset: 2px;
  }
</style>
